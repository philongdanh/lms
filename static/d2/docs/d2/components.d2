# Frontend Component Hierarchy
# D2 Documentation: https://d2lang.com

direction: down

# Root
app: App {
  providers: Providers {
    theme: ThemeProvider
    auth: AuthProvider
    apollo: ApolloProvider
    query: QueryClientProvider
  }
  router: Router
}

# Layout Components
layouts: Layouts {
  root: RootLayout {
    header: Header
    sidebar: Sidebar
    main: Main Content
    footer: Footer
  }
  auth: AuthLayout
  dashboard: DashboardLayout
  minimal: MinimalLayout
}

# UI Components (shadcn/ui)
ui: UI Components {
  forms: Forms {
    input: Input
    select: Select
    checkbox: Checkbox
    radio: RadioGroup
    textarea: Textarea
  }
  feedback: Feedback {
    alert: Alert
    toast: Toast
    progress: Progress
    skeleton: Skeleton
  }
  navigation: Navigation {
    tabs: Tabs
    breadcrumb: Breadcrumb
    pagination: Pagination
  }
  overlay: Overlay {
    dialog: Dialog
    sheet: Sheet
    dropdown: DropdownMenu
    tooltip: Tooltip
  }
  display: Display {
    card: Card
    table: Table
    avatar: Avatar
    badge: Badge
  }
}

# Feature Components
features: Feature Components {
  auth: Auth {
    login: LoginForm
    register: RegisterForm
    otp: OTPVerification
    forgot: ForgotPassword
  }
  learning: Learning {
    subject: SubjectCard
    topic: TopicList
    lesson: LessonViewer
    quiz: QuizPlayer
    progress: ProgressChart
  }
  tournament: Tournament {
    list: TournamentList
    detail: TournamentDetail
    match: MatchPlayer
    leaderboard: Leaderboard
    result: ResultCard
  }
  profile: Profile {
    info: UserInfo
    stats: UserStats
    badges: BadgeGrid
    settings: Settings
  }
}

# Shared Components
shared: Shared {
  common: Common {
    loading: LoadingSpinner
    error: ErrorBoundary
    empty: EmptyState
    confirm: ConfirmDialog
  }
  data: Data Display {
    countdown: Countdown
    timer: Timer
    score: ScoreDisplay
    streak: StreakBadge
  }
}

# Connections
app.router -> layouts
layouts.root -> features
layouts.dashboard -> features
features -> ui
features -> shared
shared -> ui
